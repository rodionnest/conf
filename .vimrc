" Indentation and numeration
set expandtab
set smarttab
set tabstop=4
set softtabstop=4
set shiftwidth=4

" Numeration
set number

" Overall indentation
set foldcolumn=0

colorscheme delek

syntax on

noremap ; l
noremap l k
noremap k j
noremap j h

" Search
set ignorecase
set smartcase
set hlsearch
set incsearch

set encoding=utf8
set ffs=unix,dos,mac
